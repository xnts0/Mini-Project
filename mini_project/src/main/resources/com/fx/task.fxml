<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="505.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fx.Controller">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="603.0" prefWidth="505.0" VBox.vgrow="ALWAYS">
      <children>
        <Label alignment="CENTER" layoutX="94.0" layoutY="24.0" text="Welcome to Smart Task Manager" textAlignment="CENTER">
          <font>
            <Font size="19.0" />
          </font>
        </Label>
        <Button fx:id="addTaskButton" layoutX="41.0" layoutY="103.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="106.0" text="Add task" onAction="#onAddTaskClick"/>
        <Button fx:id="updateTaskButton" layoutX="41.0" layoutY="178.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="106.0" text="Update task" onAction="#onUpdateTaskClick"/>
        <Button fx:id="removeTaskButton" layoutX="41.0" layoutY="251.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="106.0" text="Remove task" onAction="#onRemoveTaskClick"/>
        <ScrollPane layoutX="173.0" layoutY="103.0" prefHeight="205.0" prefWidth="306.0">
          <content>
            <VBox fx:id="taskList" spacing="5.0" />
          </content>
        </ScrollPane>
      </children>
    </AnchorPane>
  </children>
</VBox>
